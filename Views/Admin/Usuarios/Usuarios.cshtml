@model IEnumerable<UsuarioViewModel>

@{
    @using RosePark.Models.ViewModels
    Layout = "_AdminLayout";
}

<h2>Gestión de Usuarios</h2>

<p>
    <a asp-action="CrearUsuario" class="btn btn-primary">Crear Nuevo Usuario</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Correo</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Documento</th>
            <th>Edad</th>
            <th>Celular</th>
            <th>Fecha de Nacimiento</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.IdUsuario</td>
                <td>@user.CorreoUsuario</td>
                <td>@user.NombrePersona</td>
                <td>@user.ApellidosPersona</td>
                <td>@user.NroDocumentoPersona</td>
                <td>@user.EdadPersona</td>
                <td>@user.CelularPersona</td>
                <td>@user.FechaNacimientoPersona.ToShortDateString()</td>
                <td>@user.NombreRol</td>
                <td>
                    <a href="@Url.Action("EditarUsuario", new { id = user.IdUsuario })" class="btn btn-warning">Editar</a>

                    <form action="@Url.Action("EliminarUsuario", new { id = user.IdUsuario })" method="post"
                        style="display:inline;"
                        onsubmit="return confirm('¿Está seguro de que desea eliminar este usuario?');">
                        <input type="hidden" name="id" value="@user.IdUsuario" />
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>
