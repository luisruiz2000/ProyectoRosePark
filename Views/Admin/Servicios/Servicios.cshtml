@model IEnumerable<Servicio>

@{
    Layout = "_AdminLayout";
}

<h2>Gestión de Servicios</h2>
<a href="@Url.Action("CrearServicio")" class="btn btn-primary">Crear Nuevo Servicio</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var servicio in Model)
        {
            <tr>
                <td>@servicio.IdServicio</td>
                <td>@servicio.NombreServicio</td>
                <td>@servicio.DescripcionServicio</td>
                <td>@servicio.PrecioServicio.ToString("C")</td>
                <td>@servicio.EstadoServicio</td>
                <td>
                    <a href="@Url.Action("EditarServicio", new { id = servicio.IdServicio })"
                        class="btn btn-warning">Editar</a>

                    <form action="@Url.Action("EliminarServicio", new { id = servicio.IdServicio })" method="post"
                        style="display:inline;"
                        onsubmit="return confirm('¿Está seguro de que desea eliminar este servicio?');">
                        <input type="hidden" name="id" value="@servicio.IdServicio" />
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>
