@model IEnumerable<Servicio>

@{
    Layout = "_AdminLayout";
}

<h2>Gestión de Servicios</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var servicio in Model)
        {
            <tr>
                <td>@servicio.IdServicio</td>
                <td>@servicio.NombreServicio</td>
                <td>@servicio.DescripcionServicio</td>
                <td>@servicio.PrecioServicio.ToString("C")</td>
                <td>@servicio.EstadoServicio</td>
                <td>
                    <a href="@Url.Action("EditarServicio", new { id = servicio.IdServicio })">Editar</a> |
                    <a href="@Url.Action("EliminarServicio", new { id = servicio.IdServicio })" onclick="return confirm('¿Está seguro de que desea eliminar este servicio?');">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
