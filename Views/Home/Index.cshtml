<div id="paqueteCarousel" class="carousel slide">
  <div class="carousel-inner">
    @for (int i = 0; i < paquetes.Count(); i += 3)
    {
        <div class="carousel-item @(i == 0 ? "active" : "")">
            <div class="row">
                @for (int j = i; j < i + 3 && j < paquetes.Count(); j++)
                {
                    var paquete = paquetes.ElementAt(j);
                    <div class="col-md-4">
                        <div class="card" style="width: 18rem;">
                            <img src="img/hero_1.jpg" class="card-img-top" alt="Imagen del Paquete">
                            <div class="card-body">
                                <h5 class="card-title">@paquete.NombrePaquete</h5>
                                <p class="card-text">@paquete.Descripcion</p>
                                <a href="#" class="btn btn-primary">Más detalles</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
  </div>
  <a class="carousel-control-prev" href="#paqueteCarousel" role="button" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </a>
  <a class="carousel-control-next" href="#paqueteCarousel" role="button" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </a>
</div>
