@model RosePark.Models.LoginViewModel

<style>
    form {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .form-control {
        border: none;
        background-color: transparent;
        border-bottom: 1px solid #000;
        margin-bottom: 2rem;
        width: 28vw;
        border-radius: 0 !important;
    }

    .label {
        margin-bottom: 1rem;
    }

    .form-check {
        margin-bottom: 1rem;
    }

    .img-login {
        border-radius: 20px;
        margin-right: 3rem;
    }

    .btn-login {
        width: 60%;
    }
</style>

<form asp-controller="Account" asp-action="Login" method="post">
    <img src="~/img/imgLogin.jpeg" class="img-login" alt="Imagen glamping" width="500">

    <div>
        <h2 class="">Iniciar Sesión</h2>
        <p class="mt-3 mb-5">
            ¿No tienes una cuenta? <a href="@Url.Action("Register", "Home")">¡Regístrate aquí!</a>
        </p>
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        <div class="form-group">
            <label asp-for="CorreoUsuario" class="label">Correo Electronico</label>
            <input asp-for="CorreoUsuario" placeholder="Ejemplo@gmail.com" type="email" class="form-control" />
            <span asp-validation-for="CorreoUsuario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ClaveUsuario" class="label">Contraseña</label>
            <input asp-for="ClaveUsuario" placeholder="*************" type="password" class="form-control"
                type="password" />
            <span asp-validation-for="ClaveUsuario" class="text-danger"></span>
        </div>
        <div class="form-group form-check ">
            <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
            <label asp-for="RememberMe" class="form-check-label">Recordar Contraseña</label>
        </div>
        <button type="submit" class="btn btn-login btn-primary">Iniciar</button>
    </div>

</form>
