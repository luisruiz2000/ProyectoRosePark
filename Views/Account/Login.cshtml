@model RosePark.Models.LoginViewModel

<h2>Iniciar Sesión</h2>

<form asp-controller="Account" asp-action="Login" method="post">
    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
    <div class="form-group">
        <label asp-for="CorreoUsuario"></label>
        <input asp-for="CorreoUsuario" class="form-control" />
        <span asp-validation-for="CorreoUsuario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClaveUsuario"></label>
        <input asp-for="ClaveUsuario" class="form-control" type="password" />
        <span asp-validation-for="ClaveUsuario" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
</form>
